  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "plugins": []
  },
  "include": [
    "src/**/*.ts",
    "../../lib/**/*.ts",
    "../../services/**/*.ts"
