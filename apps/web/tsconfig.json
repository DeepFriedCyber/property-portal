{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "ui": ["../../packages/ui"],
      "@components/*": ["components/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "noEmit": true,
    "strict": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
