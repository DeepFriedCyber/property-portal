{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "noEmit": false,
    "module": "ESNext",
    "target": "ES2020"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "components/**/*.ts", "components/**/*.tsx", "*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.tsx", "vitest.config.ts"]
}