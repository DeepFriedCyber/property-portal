{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.tsx", 
    "stories/**/*.ts", 
    "stories/**/*.tsx", 
    "src/**/*.stories.ts", 
    "src/**/*.stories.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "vitest.config.ts",
    "vitest.setup.ts",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "index.ts"
  ],
  "exclude": ["node_modules", "dist"]
}