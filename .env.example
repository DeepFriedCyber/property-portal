# Property Portal Environment Variables
# IMPORTANT: Never commit the actual .env file to version control
# Copy this file to .env and fill in the values with your own credentials

# =========================================================
# DATABASE CONFIGURATION (REQUIRED)
# =========================================================
# PostgreSQL connection string with pgvector extension support
# Format: postgresql://username:password@hostname:port/database
# Note: The database must have the pgvector extension installed
DATABASE_URL=postgresql://postgres:password@localhost:5432/property_portal

# Database connection pool configuration
# Adjust based on your application's needs and server resources
POOL_SIZE=10

# =========================================================
# AUTHENTICATION (REQUIRED)
# =========================================================
# Clerk Authentication (used for user management)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxx
CLERK_SECRET_KEY=your-clerk-secret-key

# Clerk Redirect URLs (customize as needed)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/agent/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/agent/dashboard

# =========================================================
# AI & EMBEDDINGS (REQUIRED)
# =========================================================
# URL for the embedding service that generates vector embeddings for property similarity search
# Default is http://localhost:8000 if not specified
EMBEDDING_SERVICE_URL=http://localhost:8000

# Ollama API key for local LLM access (required for semantic search and property descriptions)
OLLAMA_API_KEY=your-ollama-api-key

# Ollama model to use for embeddings and text generation
OLLAMA_MODEL=llama3

# =========================================================
# MAPS & LOCATION SERVICES (REQUIRED FOR MAP FEATURES)
# =========================================================
# Choose ONE of the following map providers:

# Google Maps (if using Google Maps)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# OR Mapbox (if using Mapbox)
NEXT_PUBLIC_MAPBOX_TOKEN=your-mapbox-token

# OR MapTiler (if using MapTiler)
NEXT_PUBLIC_MAPTILER_KEY=your-maptiler-api-key
MAPTILER_API_KEY=your-maptiler-api-key

# =========================================================
# PAYMENT PROCESSING (REQUIRED IF USING PAYMENTS)
# =========================================================
# Stripe API keys for payment processing
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxx

# =========================================================
# IMAGE STORAGE (REQUIRED FOR PROPERTY IMAGES)
# =========================================================
# Cloudinary configuration for image uploads and storage
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# =========================================================
# APPLICATION SETTINGS (REQUIRED)
# =========================================================
# Public URL of your application (used for API calls and redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Environment setting (development, test, or production)
NODE_ENV=development

# =========================================================
# FEATURE FLAGS (OPTIONAL)
# =========================================================
# Enable or disable specific features
ENABLE_FEATURE_X=false
ENABLE_FEATURE_Y=false